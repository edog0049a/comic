@model ComicBookGallery2.Models.ComicBook[]
    @{
        ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    @foreach (var comicBooks in Model)
    {

        <div class="col-md-3">
            <h4>@Html.ActionLink(comicBooks.DisplayText,"Details",new { id = comicBooks.Id })</h4>
            <a href=@Url.Action("Details",new { id = comicBooks.Id })>
                <img src="/Images/@comicBooks.CoverImageFileName"
                     alt="@comicBooks.DisplayText"
                     class="img-responsive" />
            </a>
        </div>
    }


</div>